# WhatsApp Evolution API Configuration
# Adicione estas variáveis ao seu .env.docker

# ==============================================
# EVOLUTION API - WHATSAPP
# ==============================================

# API Key de autenticação (mínimo 32 caracteres)
# Gerar: openssl rand -hex 32
EVOLUTION_API_KEY=change-me-to-a-secure-key-minimum-32-chars

# URL pública da Evolution API (para webhooks)
# Em produção, usar domínio real: https://whatsapp.seudominio.com
EVOLUTION_API_PUBLIC_URL=http://localhost:8021

# Nome padrão da instância
EVOLUTION_DEFAULT_INSTANCE=leguas_instance

# ==============================================
# POSTGRESQL (Evolution API Database)
# ==============================================
EVOLUTION_DB_HOST=evolution_db
EVOLUTION_DB_PORT=5432
EVOLUTION_DB_NAME=evolution_db
EVOLUTION_DB_USER=evolution_user
EVOLUTION_DB_PASSWORD=evolution_pass

# ==============================================
# CONFIGURAÇÕES AVANÇADAS (Opcional)
# ==============================================

# Tempo limite do QR Code (segundos)
EVOLUTION_QRCODE_LIMIT=30

# Cor do QR Code (hexadecimal)
EVOLUTION_QRCODE_COLOR=#198754

# Nível de log (ERROR, WARN, INFO, DEBUG)
EVOLUTION_LOG_LEVEL=ERROR

# Habilitar log colorido
EVOLUTION_LOG_COLOR=true

# ==============================================
# WEBHOOK (Opcional)
# ==============================================

# URL global para webhooks
# EVOLUTION_WEBHOOK_GLOBAL_URL=http://web:8000/api/whatsapp/webhook

# Habilitar webhook global
# EVOLUTION_WEBHOOK_GLOBAL_ENABLED=false

# ==============================================
# LIMPEZA AUTOMÁTICA
# ==============================================

# Intervalo de limpeza (segundos)
EVOLUTION_CLEAN_INTERVAL=7200

# Limpar mensagens antigas
EVOLUTION_CLEAN_MESSAGES=true

# Limpar contatos
EVOLUTION_CLEAN_CONTACTS=true

# Limpar chats
EVOLUTION_CLEAN_CHATS=true
